<% content_for(:title, "Recipes") %>
<div class="column frame">
	<div class="columns rating-filter level">
		<% if @heading %>
			<div class="column">
				<h3 class="subtitle is-3"><%= @heading %></h3>
			</div>
		<% end %>
			<div class="column is-narrow level-right">
				<%= form_tag("/recipes", method: "get") do %>
					<%= label_tag(:rating, "Star Rating:", class: "hidden") %>
					<div class="field has-addons">
						<div class="control">
							<div class="select">
								<%= select_tag "rating", raw("<option value="" disabled selected>Star Rating</option><option>5</option><option>4</option><option>3</option><option>2</option><option>1</option>") %>
							</div>
						</div>
						<div class="control">
							<%= submit_tag('Filter', class: "button is-light")%>
						</div>
					</div>
				<% end %>
			</div>
	</div>
	  <%= render '/shared/recipe_card', collection: @recipes %>
</div>


