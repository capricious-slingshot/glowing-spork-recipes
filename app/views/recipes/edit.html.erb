<div class="container">
	<div class="columns">
	  <div class="column main-container">
			<%= form_for(@recipe) do |f| %>
      <div class="field">
        <%= f.label :title, class: "subtitle is-3" %>
        <div class="control">
          <%= f.text_field :title, class: "input is-large" %>
        </div>
      </div>
      <div class="field">
        <%= f.label :photo, "Photo Url", class: "subtitle is-3" %>
        <div class="control">
          <%= f.text_field :photo, class: "input is-large" %>
        </div>
      </div>
      <div class="field">
        <%= f.label :description, class: "subtitle is-3" %>
        <div class="control">
          <%= f.text_area :description, class: "textarea is-large" %>
        </div>
      </div>
      <div class="field">
        <%= f.label :course_id, "Course", class: "subtitle is-3" %><br>
        <div class="select">
          <%= f.collection_select(:course_id, Course.all, :id, :name) %>
        </div>
      </div>

      

      <% @recipe.measurements.each do |m| %> 

        <div class="field">
          <div class="select">
          <%binding.pry%>
            <%= m.collection_select(:quantity_id, Quantity.all, :id, :ammount) %>
            <%= m.collection_select(:unit_id, Unit.all, :id, :name) %>
            <%= m.collection_select(:ingredient_id, Ingredient.all, :id, :name) %>
          </div>
        </div>
        
      <% end %>


      <div class="field">
        <%= f.label :public, "Make Recipe Public?", class: "subtitle is-4" %>
        <div class="control radio">
          <%= f.label :public, "Yes", value: "true", class: "subtitle is-4" %>
          <%= f.radio_button :public, true, class: "subtitle is-4" %>
          <%= f.label :public, "No", value: "false", class: "subtitle is-4" %>
          <%= f.radio_button :public, false %>
        </div>
      </div>
      <div class="field">
        <div class="control">
          <%= f.submit "Update Recipe", class: "button is-warning is-large" %>
      <% end %>
          <%= link_to "Delete", @recipe,
                      method: "delete",
                      data: {confirm: "Are you want to delete this Recipe?"}, 
                      class: "button is-danger is-large" %>
        </div>
      </div>
		</div>
	</div>
</div>