<div class="show-wrapper">
  <div class="tile is-ancestor">
    <div class="tile is-vertical is-8">
      <div class="tile">
        <div class="tile is-parent is-vertical">
          <article class="tile is-child notification top-element odd-box heading">
            <h1 class="title is-2"><%= @recipe.title %></h1>
            <p><%= link_to "#{author_name(@recipe)}", user_path(@user) %></p>
            <p><%= created_on(@recipe) %></p>
          </article>
          <article class="tile is-child notification even-box">
            <p class="title">4 stars</p>
            <p class="subtitle"><%= @recipe.course.name %></p>
            <p><%= @recipe.description %></p>
          </article>
        </div>
        <div class="tile is-parent">
          <article class="tile is-child notification">
            <figure class="image is-4by3">
              <%= image_tag "#{recipe_image(@recipe)}" %>
            </figure>
          </article>
        </div>
      </div>
      <div class="tile is-parent">
        <article class="tile is-child notification odd-box heading">
          <p class="title">Ingredients</p>
          <p class="subtitle"></p>
          <div class="content">
            <ul>
              <% @recipe.measurements.each do |m| %>
                <li><%= m.quantity %> <%= m.unit %> <%= m.ingredient %></li>
              <% end %>
            </ul>
          </div>
        </article>
      </div>
    </div>
    <div class="tile is-parent">
      <article class="tile is-child notification even-box top-element">
        <div class="content">
          <p class="title">Do All Of The Things</p>
          <% @steps.each do |s| %>
            <p class="subtitle">Step <%= s.position %>:</p>
            <div class="content">
              <p><%= s.description %></p>
            </div>
          <% end %>
        </div>
          <%= link_to "Edit Recipe", edit_recipe_path(@recipe), class: "button is-warning is-large crud-button" %>
