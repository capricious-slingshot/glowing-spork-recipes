<div class="show-wrapper">
  <div class="tile is-ancestor">
    <div class="tile is-vertical is-8">
      <div class="tile">
        <div class="tile is-parent is-vertical">
          <article class="tile is-child notification top-element odd-box heading">
            <h1 class="title"><%= @recipe.title.capitalize %></h1>
            <h3 class="subtitle">Author: <%= link_to "#{author_name(@recipe)}", user_path(@user) %></h3>
            <p><%= created_on(@recipe) %></p>
          </article>
          <article class="tile is-child notification even-box">
            <p class="title">4 stars</p>
            <p><%= @recipe.description %></p>
          </article>
        </div>
        <div class="tile is-parent">
          <article class="tile is-child notification">
            <figure class="image is-4by3">
              <%= image_tag "#{recipe_image(@recipe)}" %>
            </figure>
          </article>
        </div>
      </div>
      <div class="tile is-parent">
