              <li>1/2 stick butter</li>
              <li>1 cup flour</li>
              <li>2 eggs</li>
            </ul><!-- Content -->
          </div>
        </article>
      </div>
    </div>
    <div class="tile is-parent">
      <article class="tile is-child notification even-box top-element">
        <div class="content">
          <p class="title">Do All Of The Things</p>
          <% @steps.each do |s| %>
            <p class="subtitle">Step <%= s.position %>:</p>
            <div class="content">
              <p><%= s.description %></p>
            </div>
          <% end %>
