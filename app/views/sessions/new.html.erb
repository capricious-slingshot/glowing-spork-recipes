<%= form_tag(session_path) do %>
  <div class="field required">
    <div class="control">
      <%= label_tag :email, nil, class: "hidden" %>
      <%= email_field_tag :email, nil, required: true, class: "input is-large", placeholder: "Email", autofocus: true %>
    </div>
  </div>
  <div class="field required">
    <div class="control">
      <%= label_tag :password, nil, class: "hidden" %>
      <%= password_field_tag :password, nil, required: true, class: "input is-large", placeholder: "Password" %>
    </div>
  </div>
  <%= submit_tag "Log In", class: "button is-block is-info is-large is-fullwidth" %>
<% end %>
