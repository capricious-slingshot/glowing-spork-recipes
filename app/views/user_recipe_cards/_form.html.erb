<div class="columns">
  <div class="column is-10 is-offset-1">
    <div class="field">
      <%= f.label :notes, class: "subtitle is-3 hidden" %>
      <div class="control">
        <%= f.text_area :notes, class: "input is-large textarea", placeholder: "Your Recipe Notes", required: true, autofocus: true %>
      </div>
    </div>
    <%= f.label :rating, "Star Rating:", class: "hidden" %>
    <br><br>
    <div class="field">
      <div class="control">
        <div class="select is-info is-large">
          <%= f.select :rating, raw("<option>Star Rating</option><option>5</option><option>4</option><option>3</option><option>2</option><option>1</option>") %>
        </div>
      </div>
    </div>
    <br><br>
    <div class="field">
      <div class="control">
        <%= f.submit "Save Notes", class: "button is-warning is-large" %>
      </div>
    </div>
  </div>
</div>
<br><br>