<div class="container">
  <div class="columns">
	  <div class="column main-container">
      <h1 class="title is-1">Add Notes</h1>
      <%= form_for(@card, url: user_recipe_card_path(@user_id, @recipe_id)) do |f| %>
        <div class="columns">
          <div class="column is-10 is-offset-1">
            <div class="field">
              <%= f.label :notes, class: "subtitle is-3 hidden" %>
              <div class="control">
                <%= f.text_area :notes, class: "input is-large textarea", placeholder: "Your Recipe Notes", required: true, autofocus: true %>
              </div>
            </div>
            <%= f.label :rating, "Star Rating:", class: "hidden" %>
            <br><br>
            <div class="field">
              <div class="control">
                <div class="select is-info is-large">
                  <%= f.select :rating, ["Star rating","5", "4", "3", "2", "1"] %>
                </div>
              </div>
            </div>
            <br><br>
            <div class="columns">
              <div class="column is-narrow">
                <div class="field">
                  <div class="control">
                    <%= f.submit "Save Notes", class: "button is-warning is-large" %>
                    <% end %>
                  </div>
                </div>
              </div>
              <div class="column">
                <div class="field">
                  <div class="control">
                    <%= link_to "Delete", user_recipe_card_path(@user_id, @recipe_id, @card),
                    method: "delete",
                    data: {confirm: "Are you want to delete this Recipe?"}, 
                    class: "button is-danger is-large" %>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
        <br><br>
        
      
    </div>
  </div>
</div>