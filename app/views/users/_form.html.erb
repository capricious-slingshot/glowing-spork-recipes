<h3 class="title has-text-black"><%= header_language(@user) %></h3>
<hr class="login-hr">
<p class="subtitle has-text-black"><%= sub_header_language(@user) %></p>
<div class="box">
  <fieldset>
    <%= form_for(@user) do |f| %>
      <div class="field required">
        <div class="control">
          <%= f.label :name, class: 'hidden' %>
          <%= f.text_field :name, class: "input is-large", placeholder: 'User Name', autofocus: true %>
        </div>
      </div>
      <div class="field required">
        <div class="control">
          <%= f.label :email, class: 'hidden' %>
          <%= email_field(:user, :email, class: "input is-large", placeholder: "Email") %>
        </div>
      </div>
      <div class="field required">
        <div class="control">
          <%= f.label :password, class: 'hidden' %>
          <%= password_field(:user, :password, class: "input is-large", placeholder: "Password") %>
        </div>
      </div>
      <div class="field required">
        <div class="control">
          <%= f.label :password_confirmation, class: 'hidden' %>
          <%= password_field(:user, :password_confirmation, class: "input is-large", placeholder: "Password Confirmation") %>
        </div>
      </div>
        <%= f.submit "#{button_language(@user)}", class: "button is-block is-info is-large is-fullwidth" %>
    <% end %>
  </fieldset>
</div>
<p><%= footer_link(@user) %></p>